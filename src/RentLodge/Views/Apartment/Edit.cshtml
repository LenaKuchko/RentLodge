@model RentLodge.Models.Apartment
@{
    ViewData["Title"] = "Edit new apartment";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Apartment" asp-action="Create" method="post" class="form-horizontal">
    <h4>Edit apartment</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Price" class="form-control" />
        </div>
    </div>

    <div class="update-apartment">Update</div>

    <div id="update-result"></div>
    <div class="start-apartment-form">
        <div class="edit-address">Edit address</div>
        <div id="display-address-form"></div>
        <div class="edit-description">Edit description</div>
        <div id="display-description-form"></div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<script>
    $('.update-apartment').click(function () {
        console.log("Apartment edit");
        console.log("@Model.Title");
        var apTitle = "@Model.Title";
        $.ajax({
            dataType: 'html',
            url: '@Url.Action("Edit")',
            data: { 'title': apTitle},
            type: 'POST',
            contentType: 'application/html',
            success: function (result) {
                $('#update-result').html(result);
            }
        });
    });
    $('.edit-address').click(function () {
        console.log(@Model.Id)
        $.ajax({
            type: 'GET',
            dataType: 'html',
            data: {id: @Model.AddressId},
            url: '@Url.Action("Edit", "Address")',
            success: function (result) {
                $('#display-address-form').html(result);
            }
        });
    });

    $('.edit-description').click(function () {
        $.ajax({
            type: 'GET',
            dataType: 'html',
            data: {id: @Model.DescriptionId},
            url: '@Url.Action("Edit", "Description")',
            success: function (result) {
                $('#display-description-form').html(result);
            }
        });
    });
</script>


