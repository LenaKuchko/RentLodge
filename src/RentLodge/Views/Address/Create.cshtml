@model RentLodge.Models.ApartnmentViewModels.ApartmentViewModel
    <h4>Address</h4>
    <hr />
    <div class="form-group col m6">
        <label asp-for="CountryId" class="control-label">Country</label>
        <div>
            <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control"></select>
        </div>
    </div>
    <div class="form-group col m6">
        <label asp-for="City" class="control-label"></label>
        <div class="col-md-10">
            <input asp-for="City" class="form-control"/>
        </div>
    </div>
    <div class="form-group col m10">
        <label asp-for="Street" class="control-label"></label>
        <div class="col-md-10">
            <input asp-for="Street" class="form-control" />
        </div>
    </div>
    <div class="form-group col m2">
        <label class="control-label">apt. #</label>
        <div class="col-md-10">
            <input asp-for="ApartmentNumber" class="form-control" />
        </div>
    </div>
   
