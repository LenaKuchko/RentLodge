<form asp-controller="Country" asp-action="Create" method="post" class="form-horizontal">
    <h4>Add new country</h4>
    <hr />
    <div id="apt-head">
        <div class="form-group">
            <label for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input name="Name" class="form-control" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-default">Add new country</button>
</form>

